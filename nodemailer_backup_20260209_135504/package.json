{
  "name": "@phoenixpme/backend",
  "version": "1.0.0",
  "description": "Backend API for Phoenix Precious Metals Exchange",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "clean": "rm -rf dist node_modules",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "node -e \"if (process.platform === 'win32') { console.log('Use npm run test:win or test:ps1 on Windows'); process.exit(1); }\" || NODE_ENV=test jest --runInBand --forceExit",
    "test:win": "powershell -File ./scripts/test-runner.ps1",
    "test:ps1": "powershell -File ./scripts/test-runner.ps1",
    "test:watch": "NODE_ENV=test jest --watch --runInBand",
    "test:coverage": "NODE_ENV=test jest --coverage --runInBand --forceExit",
    "test:auth": "NODE_ENV=test jest src/__tests__/auth.test.ts --runInBand --forceExit",
    "test:setup": "node -e \"if (process.platform === 'win32') { console.log('Run: powershell -File ./scripts/test-db-setup.ps1'); } else { console.log('Run: bash ./scripts/test-db-setup.sh'); }\"",
    "test:ci": "npm run test:setup && npm run test:coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:reset": "prisma migrate reset",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:studio": "prisma studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nanoid": "^5.0.6",
    "nodemailer": "^8.0.1",
    "otplib": "^11.0.1",
    "prisma": "^5.7.0",
    "qrcode": "^1.5.3",
    "tsx": "^4.6.1",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.11",
    "@types/nanoid": "^3.0.0",
    "@types/node": "^20.19.32",
    "@types/nodemailer": "^6.4.22",
    "@types/qrcode": "^1.5.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "precious-metals",
    "auction",
    "blockchain",
    "trading",
    "coreum",
    "xrpl"
  ],
  "author": "PhoenixPME Team",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/phoenixpme"
  },
  "bugs": {
    "url": "https://github.com/your-org/phoenixpme/issues"
  },
  "homepage": "https://phoenixpme.com"
}

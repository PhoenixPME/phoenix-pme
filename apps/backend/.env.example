# ============================================
# PhoenixPME Backend Configuration
# ============================================

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/phoenixpme
DATABASE_SSL=false

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-token-secret-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-secret-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
CORS_MAX_AGE=86400  # 24 hours

# Email Configuration (for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@phoenixpme.com

# Blockchain Configuration
XRPL_NODE_URL=wss://s1.ripple.com
COREUM_NODE_URL=https://full-node.coreum.dev:26657
COREUM_CHAIN_ID=coreum-testnet-1
ETHEREUM_NODE_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# Wallet Configuration
WALLET_CONNECT_PROJECT_ID=your-walletconnect-project-id
COINBASE_CLIENT_ID=your-coinbase-client-id

# API Keys (External Services)
SENDGRID_API_KEY=your-sendgrid-api-key
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
STRIPE_SECRET_KEY=your-stripe-secret-key

# File Storage (AWS S3 or similar)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=phoenixpme-uploads

# Redis Configuration (for caching, rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Feature Flags
FEATURE_2FA_ENABLED=true
FEATURE_KYC_REQUIRED=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_MAINTENANCE_MODE=false

# Admin Configuration
ADMIN_EMAIL=admin@phoenixpme.com
ADMIN_INITIAL_PASSWORD=ChangeThisImmediately123!

# Development Overrides (only for development)
SKIP_EMAIL_VERIFICATION=true
DISABLE_RATE_LIMITING=false
ALLOW_INSECURE_CONNECTIONS=true
